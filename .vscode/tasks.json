{
    "tasks": [
                {
            "label": "Clean PATH",
            "type": "shell",
            "command": "$env:PATH = ($env:PATH -split ';') -notmatch 'Strawberry' -join ';'",
            "problemMatcher": [],
            "windows": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
                }
            }
        },
        {
            "label" : "CMake Configure",
            "type" : "shell",
            "command" : "cmake",
            "args" : [
                "-G", "MinGW Makefiles",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=E:/Progetti/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DVCPKG_TARGET_TRIPLET=x64-mingw-static"
            ],
            "dependsOn": "Clean PATH",
            "group": "build"
        },
        {
            "label" : "CMake Build",
            "type" : "shell",
            "command" : "cmake",
            "args" : [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn" : "CMake Configure"
        },
        {
            "label": "CMake Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--target", "sdl_appTests"
            ],
            "group": "build"
        },
        {
            "label": "Run sdl_appTests",
            "type": "shell",
            "command": "${workspaceFolder}/build/sdl_appTests.exe",
            "group": "test",
            "dependsOn": "CMake Build Tests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }

    ]
}