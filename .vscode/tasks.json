{
    "tasks": [
        {
            "label" : "CMake Configure",
            "type" : "shell",
            "command" : "cmake",
            "args" : [
                "-G", "MinGW Makefiles",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=E:/Progetti/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DVCPKG_TARGET_TRIPLET=x64-mingw-static"
            ],
            "group": "build"
        },
        {
            "label" : "CMake Build",
            "type" : "shell",
            "command" : "cmake",
            "args" : [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn" : "CMake Configure"
        },
        {
            "label": "CMake Build Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--target", "TextAdventureTests"
            ],
            "group": "build"
        },
        {
            "label": "Run TextAdventureTests",
            "type": "shell",
            "command": "${workspaceFolder}/build/TextAdventureTests.exe",
            "group": "test",
            "dependsOn": "CMake Build Tests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }

    ]
}